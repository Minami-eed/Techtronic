
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ingresar / Techtronic</title>
    @Styles.Render("~/Content/css")
</head>
<body class="bg-dark">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header" style="background-color: #0b5ed7;"><h3 class="text-center font-weight-light my-4" style="color: white;">Iniciar Sesión</h3></div>
                                <div class="card-body">
                                    <form action="@Url.Content("~/Login/Index")" method="post">
                                        @Html.AntiForgeryToken()
                                        <div class="form-group mb-3">
                                            <label for="inputEmail" class="sr-only">Correo</label>
                                            <input class="form-control" id="inputEmail" name="NCorreo" type="email" placeholder="Correo" value="admin@example.com" />
                                        </div>
                                        <div class="form-group mb-3">
                                            <label for="inputPassword" class="sr-only">Contraseña</label>
                                            <input class="form-control" id="inputPassword" name="NContrasena" type="password" placeholder="Contraseña" value="admin123" autocomplete="off" />
                                        </div>
                                        <div class="form-group mb-3">
                                            @{if (ViewBag.Error != null)
                                                {
                                                    <div class="alert alert-danger" role="alert">
                                                        @ViewBag.Error
                                                    </div>
                                                }
                                            }
                                        </div>
                                        <div class="form-group mb-3">
                                            <button class="btn btn-primary btn-block w-100" type="submit">Ingresar</button>
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center py-3" style="background-color: #20ad6b;">
                                    <div class="small"><a id="publicidad_cuenta" href="@Url.Action("Registrarse","Login")" style="color: white; text-decoration: none;">¿Necesitas una cuenta? ¡Registrate!</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto border-top">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <span class="text-muted" style="font-size: 1rem;">
                            &copy;
                            <a href="@Url.Action("Index","Home")" style="color: inherit; text-decoration: none;">Techtronic</a>
                            <script>
                                var year = new Date().getFullYear();
                                document.write(year);
                            </script>
                        </span>
                        <div class="text-muted" style="font-size: 1rem;">
                            <svg height="32" viewBox="0 0 16 16" version="1.1" width="25" >
                                <path fill-rule="evenodd" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"></path>
                            </svg>
                            <a href="https://github.com/Minami-eed/Techtronic" target="_blank" style="color: black; text-decoration: none; margin-left: 5px;">Código</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
